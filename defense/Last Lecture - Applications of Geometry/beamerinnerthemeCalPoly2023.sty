\RequirePackage{tikz}
\RequirePackage[scaled]{helvet}

%define some pictures
\pgfdeclareimage[height=\paperheight,width=\paperwidth]{titlebackground}{CPTitlePage169}
\pgfdeclareimage[height=\paperheight,width=\paperwidth]{sectiondivider}{CPSectionPage169}


\setbeamertemplate{title page}%
{%
  \begin{tikzpicture}[remember picture,overlay]
    \node[anchor=south west,inner sep=0,text opacity=1]
    (image) at (current page.south west)
    {\pgfuseimage{titlebackground}};
  \end{tikzpicture}
  \begin{columns}
  \begin{column}{0.08\textwidth}
  \end{column}
    \begin{column}{0.55\textwidth}
      {\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par}%
      {\usebeamerfont{subtitle}\usebeamercolor[bg]{title}\insertsubtitle\par}%
      {\usebeamerfont{date in titlepage}\usebeamercolor[bg]{title}\insertdate\par}
      \ifx\insertauthor\@empty%
      {\usebeamerfont{author in titlepage}\usebeamercolor[bg]{title}\par}
      \vskip 3ex%
      \insertinstitute\par%
      \else%
      \vskip 3ex%
      {\usebeamerfont{subtitle}\usebeamercolor[bg]{title}Presented~by\par}%
      {\usebeamerfont{author in titlepage}\usebeamercolor[bg]{title}
      \insertauthor\par%
      \insertinstitute\par}%
      \fi
    \end{column}
    \begin{column}{0.5\textwidth}
    \end{column}
  \end{columns}
}

% Correct symbols to be inserted [COMING SOON]

\setbeamertemplate{itemize item}{\scriptsize\raise1.25pt\hbox{\donotcoloroutermaths$\blacktriangleright$}}
\setbeamertemplate{itemize subitem}{\tiny\raise1.5pt\hbox{\donotcoloroutermaths$\blacktriangleright$}}
\setbeamertemplate{itemize subsubitem}{\tiny\raise1.5pt\hbox{\donotcoloroutermaths$\blacktriangleright$}}


\setbeamertemplate{section page}
{%
  \begin{tikzpicture}[remember picture,overlay]%
    \node[anchor=south west,inner sep=0,text opacity=1]
    (image) at (current page.south west)
    {\pgfuseimage{sectiondivider}};
  \end{tikzpicture}%
  {\usebeamerfont{subtitle}\usebeamercolor[fg]{section}\insertsectionnumber~\insertsection\par}
  }